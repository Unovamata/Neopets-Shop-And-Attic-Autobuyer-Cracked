{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "NeoBuyer+",
    "version": "0.6.1",
    "manifest_version": 3,
    "description": "NeoBuyer+ Main Shop & Almost Abandoned Attic Autobuyer for Neopets.com",
    "icons":
    {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action":
    {
        "default_title": "NeoBuyer+ Settings"
    },
    "default_locale": "en",
    "background":{
        "service_worker": "src/bg/background.js"
    },
    "options_page": "src/options/Autobuyer/autobuyer.html",
    "permissions": [
        "storage",
        "webNavigation",
        "notifications",
        "tts",
		"downloads"
    ],
	"web_accessible_resources": [
		{
		  "resources": ["icons/circle.svg"],
		  "matches": ["<all_urls>"]
		}
	  ],
    "content_scripts": [
	{
        "matches": [
            "https://www.neopets.com/quickstock.phtml*"
        ],
        "js": [
			"js/jquery.js",
            "src/better_quick_stock.user.js"
        ]
    },
    {
        "matches": [
            "https://www.neopets.com/halloween/garage.phtml*",
            "https://www.neopets.com/objects.phtml*",
			"https://www.neopets.com/haggle.phtml*"
        ],
        "js": [
			"js/moment.js",
			"js/moment-timezone-with-data.js",
            "src/common/default_items.js",
            "src/common/item_db.js",
            "src/inject/inject.js",
			"src/neopets-restock-timer.user.js"
        ]
    },
    {
        "matches": [
            "http://www.neopets.com/shops/wizard.phtml*",
            "https://www.neopets.com/shops/wizard.phtml*"
        ],
        "all_frames": true,
        "js": [
            "src/neon.js"
        ],
        "run_at": "document_end"
    },
	{
        "matches": [
            "https://www.neopets.com/market.phtml?type=your",
			"https://www.neopets.com/market.phtml?*",
			"https://www.neopets.com/shops/wizard.phtml*"
        ],
        "all_frames": true,
        "js": [
			"src/common/utils.js",
            "src/inject/autopricer.js"
        ],
        "run_at": "document_end"
    }
	]
}